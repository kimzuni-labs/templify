{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["ES2020"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
	},
	"include": [
		"**/*.ts",
		"**/.*.ts",
	],
	"exclude": [
		"node_modules",
		"dist",
	],
}
