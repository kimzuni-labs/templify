{
	"compilerOptions": {
		"composite": true,
		"target": "esnext",
		"lib": ["ESNext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"isolatedModules": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"exclude": [
		"**/node_modules/**",
		"**/dist/**"
	]
}
