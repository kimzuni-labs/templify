{
  "name": "@kimzuni/templify-monorepo",
  "private": true,
  "type": "module",
  "workspaces": ["packages/**"],
  "scripts": {
    "test": "npm --workspaces run test --if-present",
    "test:all": "npm --workspaces run test:all --if-present",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov",
    "lint": "markdownlint-cli2 && yamllint . && eslint .",
    "lint:eslint": "eslint .",
    "lint:markdown": "markdownlint-cli2",
    "lint:yaml": "yamllint .",
    "build": "npm --workspaces run build --if-present"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/bun": "^1.3.5",
    "eslint": "^9.39.2",
    "markdownlint-cli2": "^0.20.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "yamllint-js": "^0.1.0"
  }
}
